<label data-theme-picker>
  Theme
  <select name="theme" id="theme">
    <option selected value="indigo">Indigo</option>
    <option value="orange">Orange</option>
    <option value="dark">Dark</option>
  </select>
</label>

<script>
  // @ts-nocheck
  const QUERY = '[data-theme-picker]>select';
  let pickers = [...document.querySelectorAll(QUERY)];
  pickers.forEach((picker) => {
    picker.addEventListener('change', (e) => {
      picker.dispatchEvent(new CustomEvent('theme-picker-change', {
        bubbles: true,
        detail: {
          theme: picker.value
        }
      }));
    });
  });
</script>